<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_img"
        android:text="name"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_designGson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_name"
        android:layout_toRightOf="@id/iv_img"
        android:text="designGson"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_elementsGson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_designGson"
        android:layout_toRightOf="@id/iv_img"
        android:text="designGson"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/tv_printSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_elementsGson"
        android:layout_toRightOf="@id/iv_img"
        android:text="printSize"
        android:textSize="15sp"/>

